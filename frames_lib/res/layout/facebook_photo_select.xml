<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent" >
	<LinearLayout
    	android:id="@+id/facebook_chose_photo_gallery"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
    
</LinearLayout>
    <GridView
        android:id="@+id/photo_select_grid"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="top"
       android:background="#ffffffff"
        android:horizontalSpacing="1dp"
        android:layout_above="@id/facebook_chose_photo_gallery"
        android:listSelector="@null"
        android:numColumns="3"
        android:verticalSpacing="1dp" >
    </GridView>
 <TextView
        android:id="@+id/facebook_select_click"
        android:gravity="center"
        android:text="@string/click_login_facebook"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        
    </TextView>
          <ProgressBar
            android:id="@+id/facebook_select_progress"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_centerInParent="true">
        </ProgressBar>
</RelativeLayout>