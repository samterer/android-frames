<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.androidfuture.newyear.framesfree"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    	<com.viewpagerindicator.TitlePageIndicator
        android:id="@+id/indicator"
        android:padding="5dip"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        app:textColor="#FFDDDDDD"
    	android:layout_alignParentTop="true"
        android:background="@color/custom_red"
        
        />
    	<LinearLayout 
    	    android:id="@+id/frame_close_bar"
    	    android:layout_width="fill_parent"
    	    android:layout_height="40dip" 
    	    android:layout_alignParentBottom="true"
    	    android:gravity="center"
    	    android:background="#dd666666"
    	    >
    	 <ImageView
    	     android:layout_height="40dip"
    	     android:layout_width="80dip"
    	     android:src="@drawable/close_tab"
    	     android:scaleType="fitXY"
    	     android:background="#00000000"
    	     
    	     >
    	     
    	 </ImageView>   
    	</LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="fill_parent"
        android:layout_below="@id/indicator"
        android:layout_above="@id/frame_close_bar"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/frame_bg"
        />
</RelativeLayout>
    