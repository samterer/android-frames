<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:id="@+id/base_frame"
    >
	<RelativeLayout
	    android:id="@+id/main_header_bar"
	    android:layout_width="fill_parent"
	    android:layout_height="50dip"
	    android:layout_alignParentTop="true"
	    android:background="@drawable/bar_bg">
	<ImageButton
	    android:id="@+id/open_btn"
	    android:layout_width="50dip"
	    android:layout_height="50dip"
	    android:text="Open"
	    android:layout_alignParentLeft="true"
	    android:src="@drawable/add"
	    android:background="#00000000"
	    android:scaleType="fitXY"
	    android:layout_centerVertical="true"
	    />
	    
	<ImageButton 
	    android:id="@+id/share_btn"
	    android:layout_width="50dip	"
	    android:layout_height="50dip"
	    android:text="Share"
	    android:layout_alignParentRight="true"
	    android:src="@drawable/save"
	    android:background="#00000000"
	    android:scaleType="fitXY"
	    android:layout_centerVertical="true"
	/>
	<ImageButton 
	    android:id="@+id/frame_choose_btn"
	    android:layout_width="fill_parent"
	    android:layout_height="50dip"
	    android:layout_marginLeft="30dip"
	    android:layout_marginRight="30dip"
	    android:layout_toLeftOf="@id/share_btn"
	    android:layout_toRightOf="@id/open_btn"
	    android:src="@drawable/frames"
	    android:background="#00000000"
	    android:scaleType="fitXY"
	    android:layout_centerVertical="true"

	    />
	</RelativeLayout>
	
   	<RelativeLayout
	    android:id="@+id/main_footer_bar"
	    android:layout_width="fill_parent"
	    android:layout_height="50dip"
	    android:background="@drawable/bar_bg"
	    android:layout_alignParentBottom="true">
	<ImageButton
	    android:id="@+id/btn_rotato_left"
	    android:layout_width="50dip"
	    android:layout_height="50dip"
	   	android:src="@drawable/rotate_clockwise"
	    android:background="#00000000"
	    android:layout_alignParentLeft="true"
	    android:layout_centerVertical="true"
	    android:scaleType="fitXY"
	    />
	    
	<ImageButton
	    android:id="@+id/btn_rotato_right"
	    android:layout_width="50dip"
	    android:layout_height="50dip"
	   	android:src="@drawable/rotate_unclockwise"
	    android:background="#00000000"
	    android:layout_alignParentRight="true"
	    	    android:layout_centerVertical="true"
	  	android:scaleType="fitXY"
	    />

	<SeekBar
	    android:id="@+id/seek_adjust_size"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_centerVertical="true"
	    android:layout_toRightOf="@+id/btn_rotato_left" 
	    android:layout_toLeftOf="@+id/btn_rotato_right" 
	    android:layout_marginLeft="10dip"
	    android:layout_marginRight="10dip"
	    android:thumb="@drawable/size"
	    />
	
	</RelativeLayout>
    <RelativeLayout
        android:id="@+id/content_wrap"
        android:layout_below="@id/main_header_bar"
        android:layout_above="@id/main_footer_bar"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/bg" >
	

    </RelativeLayout>
    
    
    
    <LinearLayout
        android:id="@+id/adlayout"
        android:layout_above="@id/main_footer_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
     </LinearLayout>
     <ImageView
     android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:id="@+id/hint"
     android:src="@drawable/hint"
     android:scaleType="fitXY"
     android:visibility="gone"
 	>
     </ImageView>

	
</RelativeLayout>